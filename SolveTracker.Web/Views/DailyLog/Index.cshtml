@model SolveTracker.Web.Models.DailyLog.DailyLogViewModel

<div class="row">
    <div class="col-md-4"></div>
    <div class="daily-log col-md-4 card p-4 my-3 rounded shadow-sm border-0">
        <h5>Enter your daily log</h5>
        <div class="border-bottom mb-3"></div>
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="SolveCount"></label>
                <div><span asp-validation-for="SolveCount" class="text-danger"></span></div>
                <input asp-for="SolveCount" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="OnlineJudge"></label>
                <div><span asp-validation-for="OnlineJudge" class="text-danger"></span></div>
                <select asp-for="OnlineJudge" class="form-control">
                    <option value="" disabled selected>Select an online judge</option>
                    <option value="Codeforces">Codeforces</option>
                    <option value="LeetCode">LeetCode</option>
                    <option value="HackerRank">HackerRank</option>
                    <option value="AtCoder">AtCoder</option>
                </select>
            </div>
            <div class="border-bottom mb-3 mt-3"></div>
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
